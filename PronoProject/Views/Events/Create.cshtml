@model PronoProject.Models.EventsModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="container">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Events</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SelectedSport, "Sport")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.SelectedSport, new SelectList(Model.SportList, "Value", "Text"),String.Empty)
            @Html.ValidationMessageFor(model => model.SportList)
        </div>

        <!-- DATES (jquery)-->
         <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>    
         <div class="editor-field">
            @Html.TextBox("StartDate","", new { type = "text" , name= "date" })
             <script type="text/javascript">
                 jQuery(function ($) {
                     $('*[name=StartDate]').appendDtpicker(
                            { "locale": "fr" }
                            );
                 });
                    </script>
            @Html.ValidationMessageFor(model => model.StartDate) 
        </div>

       <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>    
         <div class="editor-field">
            @Html.TextBox("EndDate", "", new { type = "text", name = "date" })
             <script type="text/javascript">
                 jQuery(function ($) {
                     $('*[name=EndDate]').appendDtpicker(
                            { "locale": "fr" }
                            );
                 });
                    </script>
            @Html.ValidationMessageFor(model => model.EndDate) 
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, new { rows = 4, cols = 50 })
        </div>

        <div>
        <p></p>
            <input type="submit" value="Create" class="btn btn-default"/>
        </div>
        
    </fieldset>
}
</div>

<a href="Index" class="btn btn-link">Retour à la liste</a> 

